<mah:MetroWindow x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Loaded="MetroWindow_Loaded"
        >
    <Grid>
        <DockPanel LastChildFill="False">
            <Grid Background="AliceBlue" Width="300" DockPanel.Dock="Left"/>
            <Grid DockPanel.Dock="Right">
                <DockPanel DockPanel.Dock="Right" Margin="0,0,0,99">
                    <Grid Name="chat_panel" Background="Beige" Width="505" Height="334" DockPanel.Dock="Top">

                    </Grid>
                    <Grid>
                        <TextBox TextWrapping="Wrap" Text="" Width="500" Name="send_message_textbox" Margin="0,1,0,-100" KeyDown="send_message_textbox_KeyDown" />
                    </Grid>
                </DockPanel>
            </Grid>


        </DockPanel>

    </Grid>
</mah:MetroWindow>
