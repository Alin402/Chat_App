<mah:MetroWindow x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Loaded="MetroWindow_Loaded"
        >
    <Grid>
        <DockPanel LastChildFill="False">
            <Grid Background="AliceBlue" Width="300" DockPanel.Dock="Left"/>
            <Grid Name="chat_panel" Background="Beige" Width="505" DockPanel.Dock="Right">
                <TextBox HorizontalAlignment="Center" Margin="0,385,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="505" Height="49" Name="send_message_textbox"/>
            </Grid>
        </DockPanel>

    </Grid>
</mah:MetroWindow>
